{
	"name": "Movies",
	"properties": {
		"folder": {
			"name": "FlowMovies"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "EntradaMovies",
						"type": "DatasetReference"
					},
					"name": "SourceMovies"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "SalidaMovies",
						"type": "DatasetReference"
					},
					"name": "sinkMovies"
				}
			],
			"transformations": [
				{
					"name": "ExtractYear"
				}
			],
			"scriptLines": [
				"source(output(",
				"          movieId as integer,",
				"          title as string,",
				"          genres as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> SourceMovies",
				"SourceMovies derive(year = toInteger(trim(right(title, 6),'()')),",
				"          title = toString(left(title, length(title)-6))) ~> ExtractYear",
				"ExtractYear sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          Column_1 as string,",
				"          Column_2 as string,",
				"          Column_3 as string",
				"     ),",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sinkMovies"
			]
		}
	}
}